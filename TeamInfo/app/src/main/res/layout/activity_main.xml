    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff">
        
        <LinearLayout
            android:onClick="anisur"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/anisur"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/anisur"
                android:padding="3dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anisur"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="#030303"
                android:padding="0dp"
                android:background="#fff"
                />


        </LinearLayout>

        <LinearLayout
            android:onClick="momo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/momo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/momo"
                android:padding="3dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Momo"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="#fff"
                android:padding="0dp"
                />


        </LinearLayout>
        
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:onClick="joty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#000000">

            <ImageView
                android:id="@+id/joty"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/joty"
                android:padding="2dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joty"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="#fff"
                android:padding="0dp"
                />


        </LinearLayout>

        <LinearLayout
            android:onClick="tasnim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#fff">

            <ImageView
                android:id="@+id/tasnim"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tasnim"
                android:padding="2dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tasnim"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="#030303"
                android:padding="0dp"
                android:background="#fff"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>